// Problems for Practice of C++
#include <iostream>
#include <iomanip>
#include<string>
using namespace std;
// Problem no 9
//Write a C++ program that swaps two numbers
main(){
		int a , b, temp;
	cout <<"Please enetr two number"<<endl;
	cout<<"Number 1 is :";
	cin>>a;
	cout<<"Number 2 is :";
	cin>>b;
	temp  = a;
	a=b;
	b= temp;
	cout<<"After swaping the Numbers :"<<endl;
		cout<<"Number 1 is :";
	cout<<a<<endl;
	cout<<"Number 2 is :";
	cout<<b<<endl;

}


// Problems for Practice of C++
#include <iostream>
#include <iomanip>
#include<string>
using namespace std;
// Problem no 10
//Write a C++ program to Convert temperature in Celsius to Fahrenheit
int main()
{
    float frh, cel;
		cout << "\n\n Convert temperature in Celsius to Fahrenheit :\n";
		cout << "---------------------------------------------------\n";	
    cout << " Input the temperature in Celsius : ";
    cin >> cel;
    frh = (cel * 9.0) / 5.0 + 32;
    cout << " The temperature in Celsius    : " << cel << endl;
    cout << " The temperature in Fahrenheit : " << frh << endl;
	cout << endl;
    return 0;
}

